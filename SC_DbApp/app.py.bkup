import os
from flask import Flask
from flask_sqlalchemy import SQLAlchemy
from flask_migrate import Migrate

# --- Database Connection String ---
#server = 'localhost'
#database = 'master'
#driver = 'ODBC Driver 18 for SQL Server' 
db_server = os.getenv('DB_SERVER', 'mssql_db')
db_user = os.getenv('DB_USER', 'sa')
db_password = os.getenv('DB_PASSWORD', 'YourStrong!Passw0rd')
db_name = os.getenv('DB_NAME', 'master')

# --- Globally initialize extensions ---
db = SQLAlchemy()
migrate = Migrate()

def create_app():
    app = Flask(__name__, template_folder='templates')

    app.config['SQLALCHEMY_DATABASE_URI'] = (
        f'mssql+pyodbc://{db_user}:{db_password}@{db_server}:1433/{db_name}?'
        f'driver=ODBC+Driver+18+for+SQL+Server&TrustServerCertificate=yes'
    )

    app.config['SQLALCHEMY_TRACK_MODIFICATIONS'] = False

    # --- Database Config ---
#    app.config['SQLALCHEMY_DATABASE_URI'] = (
 #       f'mssql+pyodbc://@{server}/{database}?'
 #       f'driver={driver}&Trusted_Connection=yes&TrustServerCertificate=yes'
#    )
#    app.config['SQLALCHEMY_TRACK_MODIFICATIONS'] = False

    # --- (NEW) SECRET KEY ---
    # This is REQUIRED for sessions and flash messages
#    app.config['SECRET_KEY'] = 'a_very_secret_key_that_you_should_change'
    app.config['SECRET_KEY'] = os.getenv('SECRET_KEY', 'dev-secret-key')
    # --- Connect the extensions to the app ---
    db.init_app(app)
    migrate.init_app(app, db)

    # --- Import models ---
    with app.app_context():
        import models 

    # --- Import and register routes ---
    from routes import register_routes
    register_routes(app, db)
    
    with app.app_context():
        try:
            print("üîÑ Setting up database tables...")
            
            # Create all tables
            db.create_all()
            
            # Create admin user if it doesn't exist
            from models import User
            if not User.query.filter_by(username='admin').first():
                admin_user = User(username='admin', email='admin@library.com', role='admin')
                admin_user.set_password('password123')
                db.session.add(admin_user)
                db.session.commit()
                print("‚úÖ Admin user created successfully!")
                print("   Username: admin")
                print("   Password: password123")
            else:
                print("‚ÑπÔ∏è Admin user already exists")
                
            print("‚úÖ Database setup completed!")
            
        except Exception as e:
            print(f"‚ùå Database error: {e}")
            db.session.rollback()
    # --- END OF ADDED CODE ---

    return app
